<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/list_Area"
    >
    <ImageView
        android:id="@+id/list_image"
        android:layout_width="150dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/dell" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="ttttt"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="20dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/list_return"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2020-04-01"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/list_dday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="D-3"
                    android:textSize="16dp"
                    android:textColor="#900000" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/list_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="분류"
                android:textSize="16dp"
                android:textColor="#666666" />
            <TextView
                android:id="@+id/under1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textSize="16dp"
                android:textColor="#666666" />
            <TextView
                android:id="@+id/list_serial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="111-1111"
                android:textSize="16dp"
                android:textColor="#666666" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>